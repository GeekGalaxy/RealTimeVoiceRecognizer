<UserControl x:Class="RealTimeVoiceRecognizer.GraphicEqualizerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RealTimeVoiceRecognizer"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100" Unloaded="UserControl_Unloaded">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*" />
                <ColumnDefinition Width="0.01*" />
                <ColumnDefinition Width="0.5*" />
            </Grid.ColumnDefinitions>
            <local:SinCanvas
                Grid.Column="0"
                x:Name="DrawingSpace1"
                Background="Black"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"/>
            <local:SinCanvas
                Grid.Column="2"
                x:Name="DrawingSpace2"
                Background="Black"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"/>
        </Grid>
    </Grid>
</UserControl>
